<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:padding="@dimen/default_activity_16dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="15sp"
              android:id="@+id/tvName"
              tools:text="QSPrinter_5956"
              android:textColor="@color/cl_333333" tools:ignore="MissingConstraints"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textSize="13sp"
              android:layout_marginTop="5dp"
              tools:visibility="gone"
              app:layout_constraintTop_toBottomOf="@id/tvName"
              android:id="@+id/tvAddress"
              tools:text="DC:0D:30:0B:29:B2"
              android:textColor="@color/cl_666666" tools:ignore="MissingConstraints"/>


    <com.weyee.poswidget.layout.QMUIButton android:layout_width="70dp" android:layout_height="30dp"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           app:layout_constraintRight_toRightOf="parent"
                                           android:id="@+id/tvPrint"
                                           tools:text="打印"
                                           android:gravity="center"
                                           android:textColor="@color/cl_white"
                                           app:qmui_radius="3dp"
                                           android:background="@color/cl_50A7FF"
                                           tools:ignore="MissingConstraints"/>

</androidx.constraintlayout.widget.ConstraintLayout>