<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:background="@color/config_color_black"
        tools:ignore="ContentDescription"
        tools:context=".ImageHandleActivity">

    <jp.co.cyberagent.android.gpuimage.GPUImageView android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    app:layout_constraintBottom_toBottomOf="parent"
                                                    android:id="@+id/imageView"
                                                    app:layout_constraintTop_toTopOf="parent"
                                                    app:gpuimage_show_loading="true"
                                                    tools:src="@mipmap/ic_brightness_white"/>

</androidx.constraintlayout.widget.ConstraintLayout>